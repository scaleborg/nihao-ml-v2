{
	"hooks": {
		"PostToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit",
				"hooks": [
					{
						"type": "command",
						"command": "pnpm format 2>/dev/null || true",
						"timeout": 30
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "echo \"$CLAUDE_TOOL_INPUT\" | grep -qE 'git.*(commit|push)' && (cd \"$CLAUDE_PROJECT_DIR\" && pnpm lint && pnpm check) || true",
						"timeout": 120
					}
				]
			}
		]
	}
}
